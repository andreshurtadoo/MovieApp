<!-- header -->
<%- include('template/header.ejs') %>

    <link rel="stylesheet" href="../css/movie.css">
    <title><%= tv.name %></title>
</head>
<body id="movie">
        <!-- navbar -->
        <%- include ('template/navbar.ejs') %> 

        <!-- acomodar -->
        <% const path = tv.backdrop_path %> 
        <% const poster = tv.poster_path %> 
        <% const url = `https://image.tmdb.org/t/p/original${path}` %>
        <% const url2 = `https://image.tmdb.org/t/p/original${poster}` %>

        <main id="main">
            <section class="inner_content">
                <!-- contenido -->
                <div class="header_large">
                    <!-- fondo -->
                    <div class="background"></div>
                        <img src="<%= url %> " alt="" class="background-img">
                    </div>
    
                    <!-- poster & overview -->
                    <div class="content">
                        <div class="information">
                            <!-- poster -->
                            <div class="poster_wrapper">
                                <div class="poster">
                                    <img src="<%= url2 %> " alt="" class="poster-img">
                                </div>
                            </div>
    
                            <!-- overview -->
                            <div class="header_poster_wrapper">
                                <div class="header">
                                    
                                    <div class="title">
                                        <h2>
                                            <a href="#" class="movieTitle"><%= tv.name %></a>
                                            <% let yearMovie = tv.first_air_date %>
                                            <% let year = yearMovie.split('-') %>
                                            <span class="date">(<%= year[0] %>)</span>  
                                        </h2>

                                        <div class="facts">
                                            <span class="release"><%= tv.first_air_date %> </span>
                                            <span class="genres">
                                                    <% let genres = tv.genres %> 
                                                    <% genres.forEach(element => { %>
                                                        <a class="genresName"><%= element.name %></a>
                                                    <% }) %>
                                            </span>
                                            <span class="runtime"></span>
                                            <span>
                                                <a href="#" type="button" class="buttonTaiser" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                                    <i class="fas fa-play" alt=">"></i>
                                                      Replay teaser
                                                </a>
                                            </span>
                                        </div>
                                    </div>

                                    <div class="header_info">
                                        <h3 class="tagline"><%= tv.tagline%> </h3>
                                        <h3>General view</h3>
                                        <div class="overview">
                                            <p><%= tv.overview %> </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
    
                </div>
            </section>
        </main>

    <script src="https://kit.fontawesome.com/8d04d5d86b.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
</body>
</html>